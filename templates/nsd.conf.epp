server:
  hide-version: yes
  verbosity: <%= $verbosity %>
  database: "<%= $database %>"
<% if $interface =~ Array { -%>
<% $interface.each |$int| { -%>
  ip-address: <%= $int %>
<% } -%>
<% } elsif $interface == String { -%>
  ip-address: <%= $interface %>
<% } -%>
  port: <%= $port %>
<% if $logfile { -%>
  logfile: "<%= $logfile %>"
<% } -%>
